{
    "manifest_version": 2,
    "name": "##OMNIBUG_NAME##",
    "version": "##OMNIBUG_VERSION##",
    "description": "Omnibug is a browser extension to decode and display outgoing digital marketing tool requests.",
    "author": "Philip Lawrence",
    "icons": {
        "16": "assets/images/blue-16.png",
        "48": "assets/images/blue-48.png",
        "128": "assets/images/blue-128.png"
    },
    "background": {
        "scripts": [
            "libs/OmnibugSettings.js",
            "libs/OmnibugPort.js",
            "providers.js",
            "eventPage.js"
        ],
        "persistent": true
    },
    "devtools_page": "devtools/devtools.html",
    "homepage_url": "https://omnibug.io/?utm_source=extension&utm_medium=##BROWSER##&utm_campaign=homepage_url",
    "options_ui": {
        "page": "options/options.html"
    },
    "options_page": "options/options.html",
    "browser_action": {
        "default_icon": {
            "16": "assets/images/blue-16.png",
            "32": "assets/images/blue-32.png",
            "48": "assets/images/blue-48.png"
        },
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "webNavigation",
        "*://*/*"
    ],
    "short_name": "Omnibug",
    "applications": {
        "gecko": {
            "id": "Omnibug@rosssimpson.com"
        }
    }
}
